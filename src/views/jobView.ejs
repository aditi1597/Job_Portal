<div class="card mt-4">
    <h5 class="card-header"><%= job.title %></h5>
    <div class="card-body">
      <h5 class="card-title mb-3"><%= job.company %></h5>
      <p class="card-text"><i class="fa-solid fa-location-dot"></i></script><%= job.location %></p>
      <p class="card-text"><i class="fa-solid fa-indian-rupee-sign"></i><%= job.salary %></p>
