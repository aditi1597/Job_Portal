<div class="container" >

    <h1 class="col-md-6 mb-4 mt-4"  style="margin: auto; text-align: center;">Update Job</h1>
      <div class="row">
        <div class="col-md-6 bg-secondary-subtle text-black p-3 mb-2"  style="margin: auto;">
    
          <form action="/updateJob" method="post">
            <input type="hidden" class="form-control" id="id" name="id"  value='<%= job.id %>'>

            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                aria-describedby="titlehelp"
                required
                value='<%= job.title %>'
              />
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <input
                type="text"
                class="form-control"
                name="description"
                id="description"
                aria-describedby="descriptionHelp"
                required
                value='<%= job.description %>'
              />
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                class="form-control"
                name="location"
                id="location"
                aria-describedby="locationHelp"
                required
                value='<%= job.location %>'
              />
            </div>
            <div class="mb-3">
              <label for="company" class="form-label">Company</label>
              <input
                type="text"
                class="form-control"
                name="company"
                id="company"
                aria-describedby="descriptionHelp"
                required
                value='<%= job.company %>'
              />
            </div>
            <div class="mb-3">
              <label for="salary" class="form-label">Salary</label>
              <input
                type="number"
                name="salary"
                class="form-control"
                id="salary"
                required
                value='<%= job.salary %>'
              />
            </div>
    
            <button type="submit" class="btn btn-primary">Update Job</button>
          </form>
        </div>
      </div>
    </div>
    